[Unit]
Description=Resize the root filesystem to fill partition

[Service]
Type=oneshot
ExecStart=/usr/bin/growpart /dev/mmcblk0 2 ; /usr/sbin/resize2fs /dev/mmcblk0p2
ExecStartPost=/usr/bin/systemctl disable resize2fs_once.service ; /usr/bin/rm -rf /etc/systemd/system/resize2fs_once.service /usr/bin/growpart

[Install]
WantedBy=multi-user.target
