RUN rm -rf \
		/etc/*- \
		/var/cache/pacman/* \
		/var/lib/systemd/* \
		/var/lib/private/* \
		/var/log/* \
		/var/tmp/* \
		/tmp/* \
		/run/* \
		/root/.bash_history \
		/root/.cache \
		/home/*/.bash_history \
		/home/*/.cache \
		/etc/localtime \
		/etc/pacman.d/hooks\
		/etc/pacman.d/gnupg\
	`LC_ALL=C pacman -Qo /var/cache/* 2>&1 | grep 'error: No package owns' | awk '{print $5}'`

RUN mkdir /var/cache/pacman/pkg

RUN sed -i -e "s/^#!!!CheckSpace/CheckSpace/g" /etc/pacman.conf

RUN locale-gen
ENV LC_ALL C
